{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "build/dist",
    "rootDir": "src",
    "strictNullChecks": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "paths": {
      "@app*": [
        "src*"
      ],
      "paper": [
        "./node_modules/paper/dist/paper-full"
      ]
    }
  },
  "exclude": [
    "acceptance-tests",
    "build",
    "node_modules",
    "jest",
    "scripts",
    "src/setupTests.ts",
    "webpack"
  ]
}
